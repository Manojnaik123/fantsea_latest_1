<% layout('layout/boiler')  %> 
<div class="main">
    <div class="main_sub">
        <form action="/signup" method="post">
            <div class="mb-" style="margin-top: 20px;" >
                <label for="exampleFormControlInput1" class="form-label">Username </label>
                <input type="text" class="form-control" id="exampleFormControlInput1" name="username" required>
            </div>
            <div class="mb-" style="margin-top: 20px;" >
                <label for="exampleFormControlInput1" class="form-label">Email </label>
                <input type="email" class="form-control" id="exampleFormControlInput1" name="email" required>
            </div>
            <div class="mb-3" style="margin-top: 20px;" >
                <label for="exampleFormControlInput1" class="form-label">Password</label>
                <input type="password" class="form-control" id="exampleFormControlInput1" name="password" required>
            </div>
           <button style="height:30px; width:100px; background-color:blue; border: none; margin-top: 20px; color: white; border-radius: 5px;">Signup</button>
        </form>

    </div>
</div>
<style>
    .main{
        width: 100%;
        height: 80vh;
        margin-top: 150px;

    }
    .main_sub{
