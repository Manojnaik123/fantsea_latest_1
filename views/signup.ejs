        height: 60%;
        /* background-color: rebeccapurple; */
        margin-left: auto;
        margin-right: auto;
        border-radius: 5px;
        
    }
    .main_sub form{
        height: 100%;
    }
    .sex{
        margin-top: 20px;
    }
    @media only screen and (max-width: 600px) {
  .main_sub{
      width: 80%;
