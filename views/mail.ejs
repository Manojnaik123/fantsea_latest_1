<% layout('layout/boiler')  %> 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div class="space">
    <% for(let d of data){ %>
        <div class="in">
            <div class="card">
                <div class="card-header">
                  <%=d.name  %> 
                </div>
                <div class="card-body">
                  <h5 class="card-title"><%=d.email  %> </h5>
                  <p class="card-text"><%=d.message  %> </p>
                  <form action="/mail/<%=d._id%>?_method=DELETE " method="post"><button class="btn btn-danger">DELETE</button></form>
                </div>
              </div>

        </div>
       
        <% } %>  
</div>

<style>
    .space{
        width: 100%;
        margin-top: 140px;
    }
    .in{
        width: 50%;
        height:150px;
        margin-left: auto;
        margin-right: auto;
    }
    @media only screen and (max-width: 600px) {
  .in{
      width: 80%;
      
  }
  .space{
      margin-top: 70px;
  }
}
</style>