<% layout('layout/boiler')  %> 
<% var count=0 %> 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<%data  %>  
<div class="space">
    <% for(let d of data){ %> 
        <% count=count+1 %> 
     <div class="dub">
        <div class="card">
            <div class="card-header">
              <h5>Client: <%=count%> </h5>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%=d.name  %> </h5>
              <p class="card-title"><%=d.number  %> </p>
              <p class="card-text"><%=d.email  %> </p>
              <a href="https://wa.me/+91<%=d.number%>/?text=hello," class="btn btn-primary">Message</a>
              <form action="/callback/<%=d._id%>?_method=DELETE" method="post"><button class="mt-1  btn btn-danger" >Delete</button></form>
            </div>
          </div>
        </div>
     <% } %> 
</div>
